@{
    var returnUrl = ViewData["ReturnUrl"] as string;
    var error = TempData["Error"] as string;
}

<h2>Login</h2>
@if(!string.IsNullOrEmpty(error))
{
    <h2 class="alert-danger" style="padding:10px;">@error</h2>
}
@if(string.IsNullOrEmpty(returnUrl))
{
    returnUrl = "/";
}

<form action="/login?ReturnUrl=@System.Net.WebUtility.UrlEncode(returnUrl)" method="post"> <!--return url has slashes in them, so to lose them you do this-->
    <input type="text" name="usernameOrEmail" placeholder="Email Or Username" />
    <input type="password" name="password" placeholder="Password" />
    <input type="submit" value="login" />
</form>
